<form action="/admin/split/<%- split.id %>/delete" method="post">
  <div class="card">
    <div class="card-header">Delete <%- split.address %>?</div>
    <div class="card-body">
      <%- include('../../components/split-simple-table', { split } ) %>
    </div>
    <div class="card-footer h-stack" style="flex-direction: row-reverse">
      <button class="button button-red" type="submit">Delete</button>
      <a class="button button-clear" href="/admin/split/<%- split.id %>"
        >Cancel</a
      >
    </div>
  </div>
</form>
