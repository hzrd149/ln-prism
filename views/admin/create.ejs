<h1>Create Split</h1>

<form action="/admin/create" method="post">
  <div class="h-stack">
    <div style="flex: 1">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" required />
    </div>
    <div style="flex: 1">
      <label for="domain">Domain</label>
      <input type="text" id="domain" name="domain" required value="<%- hostname %>" />
    </div>
  </div>
  <div>
    <input type="checkbox" id="enableNostrZaps" name="enableNostrZaps" checked />
    <label class="label-inline" for="enableNostrZaps">Enable nostr Zaps</label>
  </div>
  <div>
    <input type="checkbox" id="enableNostrProfile" name="enableNostrProfile" />
    <label class="label-inline" for="enableNostrProfile">Enable nostr Profile</label>
  </div>
  <button class="button button-outline">Add</button>
</form>
